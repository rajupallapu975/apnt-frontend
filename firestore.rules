rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to read and write to the orders collection
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow any authenticated user to read and write to the notifications collection
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
  }
}
